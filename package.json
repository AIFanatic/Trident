{
  "name": "trident",
  "version": "2.0.8",
  "description": "A game engine for the web.",
  "keywords": [
    "physx",
    "three",
    "ecs",
    "components",
    "game",
    "engine",
    "webgl",
    "physics"
  ],
  "author": {
    "name": "AIFanatic",
    "url": "https://github.com"
  },
  "homepage": "https://github.com",
  "license": "MIT",
  "main": "dist/trident-bundle.js",
  "types": "dist/esm/index.d.ts",
  "module": "dist/esm/index.js",
  "dependencies": {
    "three": "0.123.0",
    "trident-physx-js-webidl": "^0.4.12"
  },
  "devDependencies": {
    "@types/jasmine": "^4.0.3",
    "@types/resize-observer-browser": "^0.1.7",
    "esbuild": "^0.12.21",
    "jasmine": "^4.1.0",
    "typedoc": "^0.21.6",
    "typedoc-plugin-markdown": "^3.10.4",
    "typedoc-plugin-no-inherit": "^1.3.0",
    "typescript": "4.1.3"
  },
  "scripts": {
    "build:all": "npm run build && npm run build:examples && npm run docs",
    "build": "npm run build:iife-bundle && npm run build:esm-bundle && npm run build:esm",
    "build:iife-bundle": "esbuild src/index.ts --bundle --outfile=dist/trident-bundle.js --target=es2020 --format=iife --global-name=trident",
    "build:esm-bundle": "esbuild src/index.ts --bundle --outfile=dist/esm/trident-esm-bundle.js --target=es2020 --format=esm",
    "build:esm": "tsc -m es2020 && cp ./dist/esm/index.d.ts ./dist/esm/trident-esm-bundle.d.ts",
    "build:examples": "rm -rf ./dist-examples && tsc -p ./examples/tsconfig.examples.json && node ./examples/scripts/postbuild.js && node ./examples/scripts/generatedoc.js && cp -r ./examples/assets ./dist-examples/",
    "dev": "esbuild src/index.ts --bundle --outfile=dist/esm/trident-esm-bundle.js --target=es2020 --format=esm --watch",
    "docs": "typedoc ./src/index.ts --excludeExternals --excludePrivate  && mv ./docs/modules.md ./docs/README.md",
    "test": "esbuild --bundle --keep-names ./tests/index.ts --outfile=dist-test/tests.spec.js --target=es2020 --format=esm --watch"
  }
}
